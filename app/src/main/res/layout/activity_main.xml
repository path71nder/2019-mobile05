<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_static_fragment"
        android:layout_width="188dp"
        android:layout_height="41dp"
        android:layout_marginBottom="31dp"
        android:text="Contoh Static Fragment"
        app:layout_constraintBottom_toTopOf="@+id/btn_dynamic_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="handlerStaticFragment"/>

    <Button
        android:id="@+id/btn_dynamic_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="27dp"
        android:text="Contoh Dynamic Fragment"
        app:layout_constraintBottom_toTopOf="@+id/btn_praktikum_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_static_fragment"
        android:onClick="handlerDynamicFragment"/>

    <Button
        android:id="@+id/btn_praktikum_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Tugas Praktikum Fragment "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dynamic_fragment"
        android:onClick="handlerPraktikumFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>